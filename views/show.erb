<%= erb :'partials/_header' %>

      <h2>View a squad</h2>
      <div class="inline dataHeader">
        <span><h3>Squad Name</h3></span>
        <span>Mascot</span>
        <span>Delete this squad</span>
      </div>

      <div class="inline data">
        <span class="rowTightLeft">
          <a href="/squads/<%= @squad["squad_id"] %>/edit">Edit</a>
        </span>
        <span><h3><%= @squad["name"] %></h3></span>
        <span><%= @squad["mascot"] %></span>
        <span>
          <form action="/squads/<%= @squad["squad_id"] %>" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="X" class="delete"> <!-- ON HOVER ==> show "Delete this Squad?<br>Must not have any students assigned to it." -->
          </form>
        </span>
      </div>

      <div>
        <a href="/squads/<%= @squad["squad_id"] %>/students">Show Students</a>
      </div>

<%= erb :'partials/_footer' %>